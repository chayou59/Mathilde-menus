<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VeggiPlan - 30 Jours Anti-Inflammatoires</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #f1f8e9, #c8e6c9);
      margin: 0;
      padding: 20px;
      color: #2e2e2e;
    }
    
    .header {
      background: linear-gradient(135deg, #2e7d32, #4caf50);
      color: white;
      text-align: center;
      padding: 2rem;
      border-radius: 15px;
      margin-bottom: 2rem;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }
    
    .header h1 {
      font-size: 2.5rem;
      margin: 0;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .day-selector {
      display: flex;
      gap: 10px;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .day-btn {
      padding: 12px 20px;
      background: white;
      border: 2px solid #2e7d32;
      color: #2e7d32;
      border-radius: 25px;
      cursor: pointer;
      font-weight: bold;
      transition: all 0.3s;
    }
    
    .day-btn:hover, .day-btn.active {
      background: #2e7d32;
      color: white;
    }
    
    .meals-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    
    .meal-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transition: transform 0.3s;
    }
    
    .meal-card:hover {
      transform: translateY(-5px);
    }
    
    .meal-type {
      background: #2e7d32;
      color: white;
      padding: 8px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: bold;
      display: inline-block;
      margin-bottom: 1rem;
    }
    
    .meal-title {
      font-size: 1.3rem;
      color: #2e7d32;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    
    .ingredients {
      margin-bottom: 1rem;
    }
    
    .ingredients h4 {
      color: #2e7d32;
      margin-bottom: 0.5rem;
    }
    
    .ingredients ul {
      list-style: none;
      padding: 0;
    }
    
    .ingredients li {
      background: #f1f8e9;
      padding: 8px 12px;
      margin-bottom: 5px;
      border-radius: 8px;
      border-left: 4px solid #4caf50;
    }
    
    .instructions {
      background: #e8f5e8;
      padding: 1rem;
      border-radius: 10px;
      border-left: 4px solid #2e7d32;
    }
    
    .instructions h4 {
      color: #2e7d32;
      margin-bottom: 0.5rem;
    }
    
    .complete-btn {
      background: #4caf50;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 20px;
      cursor: pointer;
      font-weight: bold;
      margin-top: 1rem;
      transition: all 0.3s;
    }
    
    .complete-btn:hover {
      background: #45a049;
      transform: translateY(-2px);
    }
    
    .complete-btn:disabled {
      background: #81c784;
      cursor: not-allowed;
    }
    
    @media (max-width: 768px) {
      .header h1 {
        font-size: 2rem;
      }
      
      .day-selector {
        flex-direction: column;
        align-items: center;
      }
      
      .meals-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üå± VeggiPlan</h1>
      <p>30 jours de recettes v√©g√©tariennes anti-inflammatoires</p>
    </div>
    
    <div class="day-selector">
      <button class="day-btn active" onclick="showDay(1)">Jour 1</button>
      <button class="day-btn" onclick="showDay(2)">Jour 2</button>
      <button class="day-btn" onclick="showDay(3)">Jour 3</button>
      <button class="day-btn" onclick="showDay(4)">Jour 4</button>
      <button class="day-btn" onclick="showDay(5)">Jour 5</button>
      <button class="day-btn" onclick="showDay(6)">Jour 6</button>
      <button class="day-btn" onclick="showDay(7)">Jour 7</button>
    </div>
    
    <div id="meals-container" class="meals-grid">
      <!-- Repas g√©n√©r√©s par JavaScript -->
    </div>
  </div>

  <script>
    const recipes = [
      {
        jour: 1,
        repas: "üåÖ Petit-d√©jeuner",
        titre: "Porridge fruits rouges & graines",
        ingredients: [
          "40g flocons d'avoine",
          "200ml lait v√©g√©tal (amande ou avoine)",
          "1 poign√©e de fruits rouges surgel√©s",
          "1 c.√†.c de graines de lin moulues",
          "1 pinc√©e de cannelle"
        ],
        instructions: "Faire chauffer le lait et les flocons 5 minutes √† feu doux. Ajouter fruits rouges et cannelle. Parsemer de graines de lin au moment de servir."
      },
      {
        jour: 1,
        repas: "‚òÄÔ∏è D√©jeuner",
        titre: "Salade de quinoa & pois chiches",
        ingredients: [
          "100g de quinoa",
          "100g de pois chiches cuits",
          "1/2 poivron rouge",
          "1/2 concombre",
          "Jus de 1/2 citron",
          "1 c.√†.s d'huile d'olive",
          "Persil frais"
        ],
        instructions: "Cuire le quinoa. M√©langer avec les pois chiches, l√©gumes en d√©s, persil. Assaisonner citron-huile-√©pices."
      },
      {
        jour: 1,
        repas: "ü•ú Collation",
        titre: "Kiwi & noix",
        ingredients: [
          "1 kiwi",
          "1 poign√©e de noix (30g)"
        ],
        instructions: "√âplucher le kiwi. Servir avec les noix nature."
      },
      {
        jour: 1,
        repas: "üåô D√Æner",
        titre: "Curry de lentilles corail & √©pinards",
        ingredients: [
          "100g lentilles corail",
          "1/2 oignon",
          "1 gousse d'ail",
          "100g √©pinards frais",
          "150ml lait de coco",
          "1 c.√†.c curcuma",
          "1/2 c.√†.c cumin",
          "Huile d'olive"
        ],
        instructions: "Faire revenir ail/oignon. Ajouter lentilles, √©pices, lait de coco et cuire 15 min. Ajouter les √©pinards en fin de cuisson. Servir chaud."
      }
    ];

    let currentDay = 1;
    let completedMeals = {};

    function showDay(day) {
      currentDay = day;
      
      // Mettre √† jour les boutons
      document.querySelectorAll('.day-btn').forEach(btn => btn.classList.remove('active'));
      event.target.classList.add('active');
      
      // Afficher les repas
      displayMeals(day);
    }

    function displayMeals(day) {
      const dayRecipes = recipes.filter(recipe => recipe.jour === day);
      const container = document.getElementById('meals-container');
      
      container.innerHTML = dayRecipes.map((recipe, index) => {
        const mealId = `${day}-${index}`;
        const isCompleted = completedMeals[mealId];
        
        return `
          <div class="meal-card">
            <div class="meal-type">${recipe.repas}</div>
            <div class="meal-title">${recipe.titre}</div>
            
            <div class="ingredients">
              <h4>üõí Ingr√©dients :</h4>
              <ul>
                ${recipe.ingredients.map(ingredient => `<li>${ingredient}</li>`).join('')}
              </ul>
            </div>
            
            <div class="instructions">
              <h4>üë©‚Äçüç≥ Pr√©paration :</h4>
              <p>${recipe.instructions}</p>
            </div>
            
            <button class="complete-btn" onclick="completeMeal('${mealId}')" ${isCompleted ? 'disabled' : ''}>
              ${isCompleted ? '‚úÖ R√©alis√© !' : 'üë®‚Äçüç≥ Marquer comme fait'}
            </button>
          </div>
        `;
      }).join('');
    }

    function completeMeal(mealId) {
      completedMeals[mealId] = true;
      displayMeals(currentDay);
      
      // Animation de succ√®s
      alert('üéâ Repas marqu√© comme r√©alis√© !');
    }

    // Initialisation
    document.addEventListener('DOMContentLoaded', function() {
      displayMeals(1);
    });
  </script>
</body>
</html>
